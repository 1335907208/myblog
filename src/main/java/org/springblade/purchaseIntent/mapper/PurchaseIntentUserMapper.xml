<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.springblade.purchaseIntent.mapper.PurchaseIntentUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="purchaseIntentUserResultMap" type="org.springblade.purchaseIntent.entity.PurchaseIntentUser">
        <id column="id" property="id"/>
        <result column="application_id" property="applicationId"/>
        <result column="name" property="name"/>
        <result column="passport_no" property="passportNo"/>
        <result column="nationality" property="nationality"/>
        <result column="gender" property="gender"/>
        <result column="contact" property="contact"/>
        <result column="email" property="email"/>
        <result column="address" property="address"/>
        <result column="postal_code" property="postalCode"/>
        <result column="user_id" property="userId"/>
    </resultMap>

    <!-- 通用查询映射结果 -->
    <resultMap id="purchaseIntentUserVOResultMap" type="org.springblade.purchaseIntent.vo.PurchaseIntentUserVO">
    </resultMap>

    <select id="selectPurchaseIntentUserPage" resultMap="purchaseIntentUserResultMap">
        select * from house_application_purchaser
    </select>

    <select id="selectByAgent" resultMap="purchaseIntentUserVOResultMap">
        SELECT p.*,a.agent_id,a.project_id,a.eoi_no,a.status,i.name project_name
        FROM house_application_purchaser p
        LEFT JOIN house_application a
        ON p.application_id = a.id
        LEFT JOIN house_project_info i
        ON a.project_id = i.id
        <where>
            <if test="userVO.name != null and userVO.name != ''">
                AND instr(p.name,#{userVO.name})
            </if>
            <if test="userVO.projectId != null">
                AND a.project_id = #{userVO.projectId}
            </if>
            <if test="userVO.agentId != null">
                AND a.agent_id = #{userVO.agentId}
            </if>
        </where>
    </select>

</mapper>

